{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    /* IMPORT ALIASING*/
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"]
    },

    /* RULES */
    "importsNotUsedAsValues": "error"
  }
}
